<%- include ("partials/header") %>

<link rel="stylesheet" type="text/css" href="/acceptedinvitations.css">

<p id="headtext">
	Invitations You have Accepted. . .
</p>

<% cards.forEach(function(card){ %>
	<div>
		<p id="event">
			<%= card.event %>
		</p>
		<p class="cardtexts">
			Venue: <%= card.venue %>
		</p>
		<p class="cardtexts">
			Time  : <%= card.time %>
		</p>
		<p class="cardtexts">
			Date  : <%= card.date %>
		</p>
		<a href="/<%= card._id %>/view">
			<button>
				<div id="text">
					View
				</div>
			</button>
		 </a>
	</div>
<% }); %>

<a href="/view/userhomepage">
	<button id="backbutton">
		<div id="backtext">
			Back to Homepage!
		</div>
	</button>
</a>

<%- include ("partials/footer") %>